<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.jojun.didaque"
    android:versionCode="11"
    android:versionName="2.0.2" 
    >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <application
        android:name="br.com.jojun.didaque.DidaqueApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" 
        android:debuggable="false">
        <meta-data
            android:name="DATABASE_NAME"
            android:value="didaque-db.sqlite" />
        <meta-data
            android:name="DATABASE_VERSION"
            android:value="4" />
         <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        <activity
            android:name="br.com.jojun.didaque.activity.DefaultActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.jojun.didaque.activity.PreferenciasActivity"
            android:label="@string/activity_config" />
        <activity
            android:name="br.com.jojun.didaque.activity.BibliaActivity"
            android:label="BÃ­blia" >
            <!-- meta-data 
            	android:name="android.app.default_searchable"
            	android:value=".activity.SearchableActivity" /-->
        </activity>
        <activity android:name=".activity.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" 
                />            
        </activity>
        
       <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>
